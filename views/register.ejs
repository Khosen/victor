<html>
    <head>
       
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=yes">
    
        <!-- Bootstrap CSS -->
        <link href="/bootstrap/css/bootstrap.min.css" rel="Stylesheet"/>
        <link href="/bootstrap/css/bootstrap.css" rel="Stylesheet"/>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
        <link rel="stylesheet" href= "https://cdnjs.cloudflare.com/ajax/libs/flexslider/2.6.3/flexslider.min.css">
        <link rel="stylesheet" href="/font-awesome/css/font-awesome.min.css">
          <link href="/css/index.css" rel="Stylesheet"/>
         
         
    </head>
    <body id="loginbody">

        <title>APMA Register</title>
        
          <header>
              <div id="banner">
              <div class="container-fluid" style="background-color:black;">
              <div class="page-header" >
              <div class="row " >
              <div class="col-8 "> <h1>
               <a> <img src="/images/logo.jpg" class="img-fluid responsive" alt="logo"></a>
                                   
              </h1>
              
              </div>
              
              </div>
              </div>
              </div>
              </div>
              
              </header>          
      <form action="/users/register" method="POST">
      <div class="container">
          <%- messages('message', locals) %>
          
   <div class="row " style="margin:5em">
   <h1>Sign Up</h1>
   <div class="w-100"></div>
 
    <div class="col-sm-10">
      
    <p style="margin-left:-1em">Please fill in this form to create an account</p>
        
      <div class="row justify-content-center"  id="boxdiv" >
        <div class="col-sm-6">
           
                <div class="row justify-content-center">
                  <div class="col-12">
                    <div class="form-group row" style="margin-top:1em">
                         <div class="col-sm-10">
                          <input type="text" class="form-control" name="name" style="width:100%" placeholder="Name">
                        </div>
                      </div>
                      <div class="form-group row" style="margin-top:-1em">
                          <div class="col-sm-10">
                           <input type="text" class="form-control" name="username" style="width:100%" placeholder="Username">
                         </div>
                       </div>
                      <div class="form-group row" style="margin-top:-0.5em">
                        <div class="col-sm-10">
                          <input type="password" class="form-control" name="password"  placeholder="Password">
                        </div>
                      </div>
                      <div class="form-group row">
                          <div class="col-sm-10">
                            <input type="password" class="form-control" name="password2" placeholder="Re-enter Password">
                          </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-4">
                                <button class="btn btn-primary" type="submit" style="background-color:#634b0e">Register</button>
                             </div>
                          </div>
                   
                        </div>
                </div>
           </div>
      </div>
    </div>
   </div>
    </div>
  </form>

        
          <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
          <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
          <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
         
    </body>
</html>
