                                            <li><a href="/users/logout" >logout</a></li>
                                       <% } else{ %>  
                                        
                                          <li><a href="/users/register" >Register</a></li>
                               
                                      <% } %>
                                 </ul>
                        </div>
                      </nav>
            <div id="login">
              
                  
            <div>    <%- messages('message', locals) %></div>  
                
            <form action="/users/login" method="POST">
                           <div class="form-group">
                          <label for="username">Username</label>
                          <input type="username" class="form-control" name="username" id="username" aria-describedby="emailHelp" placeholder="Username">
                          <small id="emailHelp" class="form-text text-muted"></small>
                        </div>
                        <div class="form-group">
                          <label for="password">Password</label>
                          <input type="password" class="form-control" name="password" id="password" placeholder="Password">
                        </div>
                        <button type="submit" class="btn btn-primary butt-class">Login</button>        
                     
                  
                  </form>
            </div>
